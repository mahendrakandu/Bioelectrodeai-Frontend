            android:name=".LearningTopicsActivity"
            android:exported="false" />

        <!-- ECG Detail Activity -->
        <activity
            android:name=".EcgDetailActivity"
            android:exported="false"
            android:parentActivityName=".LearningTopicsActivity" />

        <!-- EEG Detail Activity -->
