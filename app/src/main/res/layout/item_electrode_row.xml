<?xml version="1.0" encoding="utf-8"?>
<!-- Reusable electrode row item -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginBottom="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/electrode_row_bg"
        android:paddingStart="12dp"
        android:paddingEnd="12dp">

        <!-- Colored dot -->
        <View
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:background="@drawable/electrode_dot_bg"
            android:layout_marginEnd="10dp" />

        <!-- Electrode name + sub -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvElectrodeName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RA"
                android:textColor="#1A1A2E"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvElectrodeDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Right Arm"
                android:textColor="#888888"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- Check icon -->
        <TextView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:text="âœ“"
            android:textColor="#E53935"
            android:textSize="16sp"
            android:gravity="center"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>
