<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F9FAFB">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gradient_teal"
        android:orientation="vertical"
        android:padding="20dp"
        android:paddingBottom="30dp">

        <LinearLayout
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="24dp">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_arrow_back"
                app:tint="@android:color/white" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Back"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginStart="8dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            
            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_document"
                android:background="@drawable/circle_white_transparent"
                android:padding="10dp"
                app:tint="@android:color/white"
                android:layout_marginEnd="16dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Comparison Report"
                    android:textColor="@android:color/white"
                    android:textSize="24sp"
                    android:textStyle="bold" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Detailed analysis &amp; recommendations"
                    android:textColor="#E0F7FA"
                    android:textSize="14sp"
                    android:layout_marginTop="4dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!-- Main Content (Overlapping) -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true"
        android:layout_marginTop="-20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Selection Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@android:color/white"
                android:layout_marginBottom="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Select Signal Type for Analysis"
                        android:textColor="#333333"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="16dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:baselineAligned="false">

                        <!-- ECG Button -->
                        <LinearLayout
                            android:id="@+id/btnSignalECG"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/card_bipolar_bg"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="16dp"
                            android:layout_marginEnd="8dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ECG"
                                android:textColor="#333333"
                                android:textSize="16sp"
                                android:textStyle="bold" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Heart"
                                android:textColor="#666666"
                                android:textSize="12sp"
                                android:layout_marginTop="4dp" />
                        </LinearLayout>

                        <!-- EEG Button -->
                        <LinearLayout
                            android:id="@+id/btnSignalEEG"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/card_rounded_border"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="16dp"
                            android:layout_marginEnd="8dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="EEG"
                                android:textColor="#333333"
                                android:textSize="16sp"
                                android:textStyle="bold" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Brain"
                                android:textColor="#666666"
                                android:textSize="12sp"
                                android:layout_marginTop="4dp" />
                        </LinearLayout>

                        <!-- EMG Button -->
                        <LinearLayout
                            android:id="@+id/btnSignalEMG"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/card_rounded_border"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="16dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="EMG"
                                android:textColor="#333333"
                                android:textSize="16sp"
                                android:textStyle="bold" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Muscle"
                                android:textColor="#666666"
                                android:textSize="12sp"
                                android:layout_marginTop="4dp" />
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Info Card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/info_card_bg_blue"
                android:orientation="vertical"
                android:padding="20dp"
                android:layout_marginBottom="24dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_info"
                        app:tint="#1565C0" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="About This Report"
                        android:textColor="#1565C0"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginStart="10dp" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="This comprehensive analysis compares bipolar and monopolar recording techniques for the selected signal type."
                    android:textColor="#1A237E"
                    android:textSize="14sp"
                    android:lineSpacingExtra="4dp"
                    android:layout_marginBottom="12dp" />

                 <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="✓  Signal quality comparison"
                    android:textColor="#1565C0"
                    android:textSize="13sp"
                    android:layout_marginBottom="6dp" />
                 <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="✓  Noise analysis with percentage differences"
                    android:textColor="#1565C0"
                    android:textSize="13sp"
                    android:layout_marginBottom="6dp" />
                 <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="✓  Stability assessment"
                    android:textColor="#1565C0"
                    android:textSize="13sp"
                    android:layout_marginBottom="6dp" />
                 <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="✓  Evidence-based technique recommendation"
                    android:textColor="#1565C0"
                    android:textSize="13sp" />

            </LinearLayout>

            <!-- Generate Button -->
             <com.google.android.material.button.MaterialButton
                android:id="@+id/btnGenerateReport"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Generate Comparison Report"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                app:icon="@drawable/ic_analytics"
                app:iconTint="@android:color/white"
                app:iconPadding="10dp"
                app:iconGravity="textStart"
                app:backgroundTint="#006064"
                app:cornerRadius="12dp" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>
