<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header with Gradient -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:background="@drawable/gradient_blue">

            <!-- Back Button -->
            <ImageView
                android:id="@+id/ivBack"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentStart="true"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:src="@drawable/ic_back"
                android:contentDescription="Back"
                app:tint="@android:color/white" />

            <!-- Icon and Title Container -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_resources"
                    app:tint="@android:color/white" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Resources Library"
                        android:textColor="@android:color/white"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Study Materials &amp; References"
                        android:textColor="#B3FFFFFF"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

        <!-- Content Container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Research Papers Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_document"
                    app:tint="#2196F3" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="Research Papers"
                    android:textColor="#333333"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Research Paper 1: Bioelectronic Medicine -->
            <LinearLayout
                android:id="@+id/resourcePaper1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/card_rounded"
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_marginBottom="12dp"
                android:clickable="true"
                android:focusable="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="@drawable/icon_bg_blue"
                        android:padding="12dp"
                        android:src="@drawable/ic_document"
                        app:tint="#1565C0" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="12dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Bioelectronic Medicine"
                            android:textColor="#1A1A1A"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Nature • 2024 • 12 pages"
                            android:textColor="#888888"
                            android:textSize="12sp"
                            android:layout_marginTop="2dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="PDF • 4.2 MB"
                            android:textColor="#1565C0"
                            android:textSize="11sp"
                            android:textStyle="bold"
                            android:layout_marginTop="4dp" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/downloadPaper1"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:background="@drawable/icon_bg_blue"
                        android:padding="8dp"
                        android:src="@drawable/ic_download"
                        app:tint="#1565C0"
                        android:clickable="true"
                        android:focusable="true" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Comprehensive review of bioelectronic approaches to neural recording and stimulation."
                    android:textColor="#666666"
                    android:textSize="12sp"
                    android:layout_marginTop="12dp"
                    android:lineSpacingExtra="2dp" />
            </LinearLayout>

            <!-- Research Paper 2: Electrode Configuration -->
            <LinearLayout
                android:id="@+id/resourcePaper2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/card_rounded"
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_marginBottom="12dp"
                android:clickable="true"
                android:focusable="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="@drawable/icon_bg_purple"
                        android:padding="12dp"
                        android:src="@drawable/ic_document"
                        app:tint="#7B1FA2" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="12dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Electrode Configuration Strategies"
                            android:textColor="#1A1A1A"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="IEEE • 2023 • 18 pages"
                            android:textColor="#888888"
                            android:textSize="12sp"
                            android:layout_marginTop="2dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="PDF • 6.8 MB"
                            android:textColor="#7B1FA2"
                            android:textSize="11sp"
                            android:textStyle="bold"
                            android:layout_marginTop="4dp" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/downloadPaper2"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:background="@drawable/icon_bg_purple"
                        android:padding="8dp"
                        android:src="@drawable/ic_download"
                        app:tint="#7B1FA2"
                        android:clickable="true"
                        android:focusable="true" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Comparative analysis of monopolar vs bipolar electrode configurations in clinical settings."
                    android:textColor="#666666"
                    android:textSize="12sp"
                    android:layout_marginTop="12dp"
                    android:lineSpacingExtra="2dp" />
            </LinearLayout>

            <!-- Research Paper 3: Signal Processing -->
            <LinearLayout
                android:id="@+id/resourcePaper3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/card_rounded"
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_marginBottom="20dp"
                android:clickable="true"
                android:focusable="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="@drawable/icon_bg_teal"
                        android:padding="12dp"
                        android:src="@drawable/ic_document"
                        app:tint="#00897B" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="12dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Neural Signal Processing Methods"
                            android:textColor="#1A1A1A"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Lancet • 2024 • 24 pages"
                            android:textColor="#888888"
                            android:textSize="12sp"
                            android:layout_marginTop="2dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="PDF • 8.5 MB"
                            android:textColor="#00897B"
                            android:textSize="11sp"
                            android:textStyle="bold"
                            android:layout_marginTop="4dp" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/downloadPaper3"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:background="@drawable/icon_bg_teal"
                        android:padding="8dp"
                        android:src="@drawable/ic_download"
                        app:tint="#00897B"
                        android:clickable="true"
                        android:focusable="true" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Advanced techniques for filtering, amplification, and interpretation of bioelectric signals."
                    android:textColor="#666666"
                    android:textSize="12sp"
                    android:layout_marginTop="12dp"
                    android:lineSpacingExtra="2dp" />
            </LinearLayout>

            <!-- Video Tutorials Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_play"
                    app:tint="#E91E63" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="Video Tutorials"
                    android:textColor="#333333"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Video 1: Setup Guide -->
            <LinearLayout
                android:id="@+id/resourceVideo1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/card_rounded"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:background="@drawable/icon_bg_pink"
                    android:padding="16dp"
                    android:src="@drawable/ic_play"
                    app:tint="#E91E63" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="12dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Electrode Setup Guide"
                        android:textColor="#1A1A1A"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="15:24 • Dr. Sarah Johnson"
                        android:textColor="#888888"
                        android:textSize="12sp"
                        android:layout_marginTop="2dp" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/downloadVideo1"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@drawable/icon_bg_pink"
                    android:padding="8dp"
                    android:src="@drawable/ic_download"
                    app:tint="#E91E63"
                    android:clickable="true"
                    android:focusable="true" />
            </LinearLayout>

            <!-- Video 2: Troubleshooting -->
            <LinearLayout
                android:id="@+id/resourceVideo2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/card_rounded"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical"
                android:layout_marginBottom="20dp"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:background="@drawable/icon_bg_pink"
                    android:padding="16dp"
                    android:src="@drawable/ic_play"
                    app:tint="#E91E63" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="12dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Signal Quality Troubleshooting"
                        android:textColor="#1A1A1A"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="22:18 • Prof. Michael Chen"
                        android:textColor="#888888"
                        android:textSize="12sp"
                        android:layout_marginTop="2dp" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/downloadVideo2"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@drawable/icon_bg_pink"
                    android:padding="8dp"
                    android:src="@drawable/ic_download"
                    app:tint="#E91E63"
                    android:clickable="true"
                    android:focusable="true" />
            </LinearLayout>

            <!-- Quick Reference Cards Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_cards"
                    app:tint="#FF9800" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="Quick Reference Cards"
                    android:textColor="#333333"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Quick Reference Card 1 -->
            <LinearLayout
                android:id="@+id/resourceCard1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/card_rounded"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="16dp"
                android:layout_marginBottom="8dp"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/icon_bg_orange"
                    android:padding="10dp"
                    android:src="@drawable/ic_document"
                    app:tint="#E65100" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="12dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Electrode Placement Guide"
                        android:textColor="#1A1A1A"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PDF • 2.1 MB"
                        android:textColor="#888888"
                        android:textSize="12sp"
                        android:layout_marginTop="2dp" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/downloadCard1"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_download"
                    app:tint="#E65100"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackground"
                    android:padding="4dp" />
            </LinearLayout>

            <!-- Quick Reference Card 2 -->
            <LinearLayout
                android:id="@+id/resourceCard2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/card_rounded"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="16dp"
                android:layout_marginBottom="8dp"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/icon_bg_orange"
                    android:padding="10dp"
                    android:src="@drawable/ic_document"
                    app:tint="#E65100" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="12dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Signal Interpretation Checklist"
                        android:textColor="#1A1A1A"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PDF • 1.8 MB"
                        android:textColor="#888888"
                        android:textSize="12sp"
                        android:layout_marginTop="2dp" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/downloadCard2"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_download"
                    app:tint="#E65100"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackground"
                    android:padding="4dp" />
            </LinearLayout>

            <!-- Quick Reference Card 3 -->
            <LinearLayout
                android:id="@+id/resourceCard3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/card_rounded"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="16dp"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/icon_bg_orange"
                    android:padding="10dp"
                    android:src="@drawable/ic_document"
                    app:tint="#E65100" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="12dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Troubleshooting Common Issues"
                        android:textColor="#1A1A1A"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PDF • 3.2 MB"
                        android:textColor="#888888"
                        android:textSize="12sp"
                        android:layout_marginTop="2dp" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/downloadCard3"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_download"
                    app:tint="#E65100"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackground"
                    android:padding="4dp" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</ScrollView>
