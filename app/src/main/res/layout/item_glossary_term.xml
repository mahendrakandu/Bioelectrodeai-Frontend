<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp"
    android:gravity="center_vertical">

    <!-- Icon Container -->
    <LinearLayout
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/icon_bg_circle_teal"
        android:gravity="center">

        <ImageView
            android:id="@+id/ivTermIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_brain"
            android:contentDescription="Term Icon" />
    </LinearLayout>

    <!-- Term and Definition Container -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginStart="16dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvTermName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Active Electrode"
            android:textColor="#333333"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvTermDefinition"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="The electrode placed directly over the target muscle or recording site"
            android:textColor="#666666"
            android:textSize="14sp"
            android:lineSpacingExtra="2dp" />
    </LinearLayout>

</LinearLayout>
