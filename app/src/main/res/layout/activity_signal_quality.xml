<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gradient_header"
        android:orientation="vertical"
        android:padding="20dp">
        <LinearLayout
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">
            <ImageView android:layout_width="20dp" android:layout_height="20dp" android:src="@drawable/ic_arrow_back" app:tint="@android:color/white" />
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:gravity="center_vertical">
            <ImageView android:layout_width="40dp" android:layout_height="40dp" android:src="@drawable/ic_signal_wave" android:background="@drawable/icon_bg_teal_rounded" android:padding="8dp" android:layout_marginEnd="12dp" />
            <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="vertical">
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Signal Quality" android:textColor="@android:color/white" android:textSize="22sp" android:textStyle="bold" />
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Waveform Analysis" android:textColor="#B3E5FC" android:textSize="14sp" android:layout_marginTop="2dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Signal Type Selector -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/card_rounded"
                android:orientation="horizontal"
                android:padding="12dp"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp"
                android:elevation="2dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Select Signal:"
                    android:textColor="#333333"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginEnd="12dp" />

                <Spinner
                    android:id="@+id/spinnerSignalType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="48dp" />
            </LinearLayout>

            <!-- ===== BIPOLAR RECORDING SIGNAL ===== -->
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:gravity="center_vertical" android:layout_marginBottom="12dp">
                <View android:layout_width="10dp" android:layout_height="10dp" android:background="@drawable/dot_blue" android:layout_marginEnd="10dp" />
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Bipolar Recording Signal" android:textColor="#1A237E" android:textSize="16sp" android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/card_rounded"
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_marginBottom="8dp"
                android:elevation="3dp">

                <!-- Waveform Display -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:background="@drawable/waveform_bg_dark"
                    android:gravity="center"
                    android:layout_marginBottom="12dp"
                    android:padding="8dp">
                    <ImageView
                        android:id="@+id/ivBipolarWaveform"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_waveform_bipolar"
                        android:contentDescription="Bipolar Waveform"
                        android:scaleType="fitCenter" />
                </LinearLayout>

                <!-- Signal Stats -->
                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:layout_marginBottom="4dp">
                    <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="Amplitude:" android:textColor="#666666" android:textSize="13sp" />
                    <TextView android:id="@+id/tvBipolarAmplitude" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Â±50 Î¼V" android:textColor="#1A237E" android:textSize="13sp" android:textStyle="bold" />
                </LinearLayout>
                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:layout_marginBottom="4dp">
                    <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="Noise Level:" android:textColor="#666666" android:textSize="13sp" />
                    <TextView android:id="@+id/tvBipolarNoise" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Low (5 Î¼V)" android:textColor="#4CAF50" android:textSize="13sp" android:textStyle="bold" />
                </LinearLayout>
                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal">
                    <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="SNR:" android:textColor="#666666" android:textSize="13sp" />
                    <TextView android:id="@+id/tvBipolarSNR" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="10:1" android:textColor="#1565C0" android:textSize="13sp" android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

            <!-- Bipolar Info -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/card_rounded"
                android:padding="14dp"
                android:layout_marginBottom="20dp"
                android:elevation="1dp">
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Clean signal with minimal noise. Common mode interference rejected effectively." android:textColor="#555555" android:textSize="13sp" android:lineSpacingExtra="2dp" />
            </LinearLayout>

            <!-- ===== MONOPOLAR RECORDING SIGNAL ===== -->
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:gravity="center_vertical" android:layout_marginBottom="12dp">
                <View android:layout_width="10dp" android:layout_height="10dp" android:background="@drawable/dot_teal" android:layout_marginEnd="10dp" />
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Monopolar Recording Signal" android:textColor="#1A237E" android:textSize="16sp" android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/card_rounded"
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_marginBottom="8dp"
                android:elevation="3dp">

                <!-- Waveform Display -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:background="@drawable/waveform_bg_dark"
                    android:gravity="center"
                    android:layout_marginBottom="12dp"
                    android:padding="8dp">
                    <ImageView
                        android:id="@+id/ivMonopolarWaveform"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_waveform_monopolar"
                        android:contentDescription="Monopolar Waveform"
                        android:scaleType="fitCenter" />
                </LinearLayout>

                <!-- Signal Stats -->
                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:layout_marginBottom="4dp">
                    <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="Amplitude:" android:textColor="#666666" android:textSize="13sp" />
                    <TextView android:id="@+id/tvMonopolarAmplitude" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Â±120 Î¼V" android:textColor="#1A237E" android:textSize="13sp" android:textStyle="bold" />
                </LinearLayout>
                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:layout_marginBottom="4dp">
                    <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="Noise Level:" android:textColor="#666666" android:textSize="13sp" />
                    <TextView android:id="@+id/tvMonopolarNoise" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Higher (20 Î¼V)" android:textColor="#FF9800" android:textSize="13sp" android:textStyle="bold" />
                </LinearLayout>
                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal">
                    <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="SNR:" android:textColor="#666666" android:textSize="13sp" />
                    <TextView android:id="@+id/tvMonopolarSNR" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="6:1" android:textColor="#1565C0" android:textSize="13sp" android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

            <!-- Monopolar Info -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/card_rounded"
                android:padding="14dp"
                android:layout_marginBottom="20dp"
                android:elevation="1dp">
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Larger amplitude but more background noise and artifacts visible." android:textColor="#555555" android:textSize="13sp" android:lineSpacingExtra="2dp" />
            </LinearLayout>

            <!-- ===== NOISE / INTERFERENCE SIGNAL ===== -->
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:gravity="center_vertical" android:layout_marginBottom="12dp">
                <View android:layout_width="10dp" android:layout_height="10dp" android:background="@drawable/dot_orange" android:layout_marginEnd="10dp" />
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Common Interference (Noise)" android:textColor="#E65100" android:textSize="16sp" android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/card_rounded"
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_marginBottom="8dp"
                android:elevation="3dp">

                <!-- Waveform Display -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:background="@drawable/waveform_bg_dark"
                    android:gravity="center"
                    android:layout_marginBottom="12dp"
                    android:padding="8dp">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_waveform_noise"
                        android:contentDescription="Noise Waveform"
                        android:scaleType="fitCenter" />
                </LinearLayout>

                <!-- Signal Stats -->
                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:layout_marginBottom="4dp">
                    <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="Frequency:" android:textColor="#666666" android:textSize="13sp" />
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="50/60 Hz" android:textColor="#E65100" android:textSize="13sp" android:textStyle="bold" />
                </LinearLayout>
                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:layout_marginBottom="4dp">
                    <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="Source:" android:textColor="#666666" android:textSize="13sp" />
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Power line / EMG" android:textColor="#E65100" android:textSize="13sp" android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

            <!-- Noise Info -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/card_rounded"
                android:padding="14dp"
                android:layout_marginBottom="20dp"
                android:elevation="1dp">
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="This high-frequency noise is typical in unfiltered recordings. Bipolar recording helps cancel this out." android:textColor="#555555" android:textSize="13sp" android:lineSpacingExtra="2dp" />
            </LinearLayout>

            <!-- ===== QUALITY METRICS ===== -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/gradient_teal_card"
                android:orientation="vertical"
                android:padding="18dp"
                android:layout_marginBottom="14dp"
                android:elevation="4dp">
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Quality Metrics" android:textColor="@android:color/white" android:textSize="17sp" android:textStyle="bold" android:layout_marginBottom="14dp" />

                <!-- Bipolar Clarity -->
                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:layout_marginBottom="6dp">
                    <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="Bipolar Clarity" android:textColor="@android:color/white" android:textSize="14sp" />
                    <TextView android:id="@+id/tvBipolarClarity" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="92%" android:textColor="@android:color/white" android:textSize="14sp" android:textStyle="bold" />
                </LinearLayout>
                <ProgressBar android:id="@+id/pbBipolarClarity" android:layout_width="match_parent" android:layout_height="8dp" style="@android:style/Widget.ProgressBar.Horizontal" android:progressDrawable="@drawable/progress_bar_blue" android:progress="92" android:max="100" android:layout_marginBottom="14dp" />

                <!-- Monopolar Clarity -->
                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:layout_marginBottom="6dp">
                    <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="Monopolar Clarity" android:textColor="@android:color/white" android:textSize="14sp" />
                    <TextView android:id="@+id/tvMonopolarClarity" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="68%" android:textColor="@android:color/white" android:textSize="14sp" android:textStyle="bold" />
                </LinearLayout>
                <ProgressBar android:id="@+id/pbMonopolarClarity" android:layout_width="match_parent" android:layout_height="8dp" style="@android:style/Widget.ProgressBar.Horizontal" android:progressDrawable="@drawable/progress_bar_blue" android:progress="68" android:max="100" />
            </LinearLayout>

            <!-- ===== AI ANALYSIS ===== -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/gradient_purple_pink"
                android:orientation="horizontal"
                android:padding="18dp"
                android:layout_marginBottom="16dp"
                android:elevation="4dp">
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="ðŸ§ " android:textSize="24sp" android:layout_marginEnd="12dp" android:layout_marginTop="2dp" />
                <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:orientation="vertical">
                    <TextView android:id="@+id/tvAIRecommendation" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="AI Analysis" android:textColor="@android:color/white" android:textSize="15sp" android:textStyle="bold" android:layout_marginBottom="6dp" />
                    <TextView android:id="@+id/tvAIReason" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Bipolar recordings show superior signal-to-noise ratio despite lower amplitude. This makes them preferred for precision applications." android:textColor="@android:color/white" android:alpha="0.95" android:textSize="13sp" android:lineSpacingExtra="3dp" />
                    <TextView android:id="@+id/tvConfidenceLevel" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Confidence: 90%" android:textColor="#E1F5FE" android:textSize="12sp" android:textStyle="italic" android:layout_marginTop="6dp" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
