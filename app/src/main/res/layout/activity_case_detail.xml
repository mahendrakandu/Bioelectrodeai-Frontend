<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:background="@drawable/gradient_teal">

            <!-- Back Button -->
            <ImageView
                android:id="@+id/ivBack"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentStart="true"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:src="@drawable/ic_back"
                android:contentDescription="Back"
                app:tint="@android:color/white" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_centerInParent="true"
                android:paddingHorizontal="16dp">

                <!-- Type Badge and Difficulty -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:id="@+id/tvType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bipolar"
                        android:textColor="@android:color/white"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        android:textAllCaps="true"
                        android:letterSpacing="0.05"
                        android:background="@drawable/badge_bipolar"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="5dp" />

                    <TextView
                        android:id="@+id/tvDifficulty"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Advanced"
                        android:textColor="@android:color/white"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:layout_marginStart="12dp"
                        android:drawableStart="@drawable/ic_info"
                        android:drawableTint="@android:color/white"
                        android:drawablePadding="4dp" />
                </LinearLayout>

                <!-- Case Title -->
                <TextView
                    android:id="@+id/tvCaseTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Alzheimer's Disease: DBS Mapping"
                    android:textColor="@android:color/white"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="4dp" />

                <!-- Case Number and Specialty -->
                <TextView
                    android:id="@+id/tvCaseNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Case #012-2024"
                    android:textColor="#B2FFFFFF"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tvSpecialty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Neurology"
                    android:textColor="#B2FFFFFF"
                    android:textSize="12sp"
                    android:drawableStart="@drawable/ic_hospital"
                    android:drawableTint="#B2FFFFFF"
                    android:drawablePadding="4dp"
                    android:layout_marginTop="2dp" />
            </LinearLayout>
        </RelativeLayout>

        <!-- Content -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Patient Profile Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/card_rounded"
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_marginBottom="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_person"
                        app:tint="#00897B" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Patient Profile"
                        android:textColor="#333333"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:layout_marginStart="8dp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tvPatientProfile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="76-year-old male with moderate AD..."
                    android:textColor="#666666"
                    android:textSize="14sp"
                    android:lineSpacingExtra="3dp" />
            </LinearLayout>

            <!-- Clinical Challenge Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/card_rounded"
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_marginBottom="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_warning"
                        app:tint="#E53935" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Clinical Challenge"
                        android:textColor="#333333"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:layout_marginStart="8dp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tvChallenge"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Map fornix region for potential DBS..."
                    android:textColor="#666666"
                    android:textSize="14sp"
                    android:lineSpacingExtra="3dp" />
            </LinearLayout>

            <!-- Why Recorded Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/card_rounded"
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_marginBottom="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_bulb"
                        app:tint="#1565C0" />

                    <TextView
                        android:id="@+id/tvWhyTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Why Bipolar Recorded?"
                        android:textColor="#333333"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:layout_marginStart="8dp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tvWhyRecorded"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="â€¢ Wide inter-electrode spacing..."
                    android:textColor="#666666"
                    android:textSize="14sp"
                    android:lineSpacingExtra="3dp" />
            </LinearLayout>

            <!-- Outcome Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/card_rounded"
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_marginBottom="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_check_circle"
                        app:tint="#4CAF50" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Outcome"
                        android:textColor="#333333"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:layout_marginStart="8dp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tvOutcome"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Successfully mapped bilateral fornix..."
                    android:textColor="#666666"
                    android:textSize="14sp"
                    android:lineSpacingExtra="3dp" />
            </LinearLayout>

            <!-- Key Learning Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/gradient_blue"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_star"
                        app:tint="@android:color/white" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Key Learning"
                        android:textColor="@android:color/white"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:layout_marginStart="8dp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tvKeyLearning"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Bipolar DBS Mapping optimal because..."
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    android:lineSpacingExtra="3dp" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</ScrollView>
