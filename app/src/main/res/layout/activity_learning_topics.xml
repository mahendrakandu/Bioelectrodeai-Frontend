<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F7FA">

    <!-- Header with Gradient -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gradient_header"
        android:orientation="vertical"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="16dp"
        android:paddingBottom="24dp">

        <!-- Back Button Row -->
        <LinearLayout
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="4dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_arrow_back"
                app:tint="@android:color/white"
                android:contentDescription="Back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Back"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:layout_marginStart="6dp" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Learning Topics"
            android:textColor="@android:color/white"
            android:textSize="28sp"
            android:textStyle="bold"
            android:layout_marginTop="12dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Explore comprehensive modules"
            android:textColor="#B3E5FC"
            android:textSize="14sp"
            android:layout_marginTop="4dp" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:clipToPadding="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="20dp"
            android:paddingBottom="24dp">

            <!-- ========== SECTION 1: Biomedical Signals ========== -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ“Š  Biomedical Signals"
                android:textColor="#1A1A1A"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="12dp" />

            <!-- ECG Card -->
            <LinearLayout
                android:id="@+id/cardECG"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/card_rounded"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="14dp"
                android:layout_marginBottom="8dp"
                android:elevation="2dp">

                <FrameLayout
                    android:layout_width="48dp"
                    android:layout_height="48dp">

                    <View
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="@drawable/icon_circle_red" />

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_heart"
                        app:tint="#E91E63"
                        android:contentDescription="ECG" />

                </FrameLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="14dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ECG - Electrocardiography"
                        android:textColor="#1A1A1A"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Heart electrical activity"
                        android:textColor="#888888"
                        android:textSize="12sp"
                        android:layout_marginTop="2dp" />

                </LinearLayout>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_arrow_right"
                    app:tint="#CCCCCC"
                    android:contentDescription="Open" />

            </LinearLayout>

            <!-- EEG Card -->
            <LinearLayout
                android:id="@+id/cardEEG"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/card_rounded"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="14dp"
                android:layout_marginBottom="8dp"
                android:elevation="2dp">

                <FrameLayout
                    android:layout_width="48dp"
                    android:layout_height="48dp">

                    <View
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="@drawable/icon_circle_purple" />

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_brain"
                        app:tint="#7C4DFF"
                        android:contentDescription="EEG" />

                </FrameLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="14dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="EEG - Electroencephalography"
                        android:textColor="#1A1A1A"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Brain wave patterns"
                        android:textColor="#888888"
                        android:textSize="12sp"
                        android:layout_marginTop="2dp" />

                </LinearLayout>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_arrow_right"
                    app:tint="#CCCCCC"
                    android:contentDescription="Open" />

            </LinearLayout>

            <!-- EMG Card -->
            <LinearLayout
                android:id="@+id/cardEMG"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/card_rounded"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="14dp"
                android:layout_marginBottom="24dp"
                android:elevation="2dp">

                <FrameLayout
                    android:layout_width="48dp"
                    android:layout_height="48dp">

                    <View
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="@drawable/icon_circle_teal" />

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_bolt"
                        app:tint="#00897B"
                        android:contentDescription="EMG" />

                </FrameLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="14dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="EMG - Electromyography"
                        android:textColor="#1A1A1A"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Muscle electrical signals"
                        android:textColor="#888888"
                        android:textSize="12sp"
                        android:layout_marginTop="2dp" />

                </LinearLayout>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_arrow_right"
                    app:tint="#CCCCCC"
                    android:contentDescription="Open" />

            </LinearLayout>

            <!-- ========== SECTION 2: Electrode Techniques ========== -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ”§  Electrode Techniques"
                android:textColor="#1A1A1A"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="12dp" />

            <!-- Electrode Placement Guide Card -->
            <LinearLayout
                android:id="@+id/cardElectrodePlacement"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/card_rounded"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="14dp"
                android:layout_marginBottom="8dp"
                android:elevation="2dp">

                <FrameLayout
                    android:layout_width="48dp"
                    android:layout_height="48dp">

                    <View
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="@drawable/icon_circle_teal" />

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_location"
                        app:tint="#00897B"
                        android:contentDescription="Placement" />

                </FrameLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="14dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Electrode Placement Guide"
                        android:textColor="#1A1A1A"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Proper positioning for ECG/EEG/EMG"
                        android:textColor="#888888"
                        android:textSize="12sp"
                        android:layout_marginTop="2dp" />

                </LinearLayout>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_arrow_right"
                    app:tint="#CCCCCC"
                    android:contentDescription="Open" />

            </LinearLayout>

            <!-- Recording Techniques Card -->
            <LinearLayout
                android:id="@+id/cardRecordingTechniques"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/card_rounded"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="14dp"
                android:layout_marginBottom="24dp"
                android:elevation="2dp">

                <FrameLayout
                    android:layout_width="48dp"
                    android:layout_height="48dp">

                    <View
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="@drawable/icon_circle_purple" />

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_bolt"
                        app:tint="#7C4DFF"
                        android:contentDescription="Recording" />

                </FrameLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="14dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Recording Techniques"
                        android:textColor="#1A1A1A"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bipolar vs Monopolar comparison"
                        android:textColor="#888888"
                        android:textSize="12sp"
                        android:layout_marginTop="2dp" />

                </LinearLayout>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_arrow_right"
                    app:tint="#CCCCCC"
                    android:contentDescription="Open" />

            </LinearLayout>

            <!-- ========== SECTION 3: Core Learning Modules ========== -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ“š  Core Learning Modules"
                android:textColor="#1A1A1A"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="12dp" />

            <!-- Bipolar Recording Card -->
            <LinearLayout
                android:id="@+id/cardBipolarRecording"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/card_rounded"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="14dp"
                android:layout_marginBottom="8dp"
                android:elevation="2dp">

                <FrameLayout
                    android:layout_width="48dp"
                    android:layout_height="48dp">

                    <View
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="@drawable/icon_circle_blue" />

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_bolt"
                        app:tint="#1E88E5"
                        android:contentDescription="Bipolar" />

                </FrameLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="14dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bipolar Recording"
                        android:textColor="#1A1A1A"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4 modules â€¢ Differential technique"
                        android:textColor="#888888"
                        android:textSize="12sp"
                        android:layout_marginTop="2dp" />

                </LinearLayout>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_arrow_right"
                    app:tint="#CCCCCC"
                    android:contentDescription="Open" />

            </LinearLayout>

            <!-- Monopolar Recording Card -->
            <LinearLayout
                android:id="@+id/cardMonopolarRecording"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/card_rounded"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="14dp"
                android:layout_marginBottom="8dp"
                android:elevation="2dp">

                <FrameLayout
                    android:layout_width="48dp"
                    android:layout_height="48dp">

                    <View
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="@drawable/icon_circle_orange" />

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_bolt"
                        app:tint="#FF9800"
                        android:contentDescription="Monopolar" />

                </FrameLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="14dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Monopolar Recording"
                        android:textColor="#1A1A1A"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4 modules â€¢ Referential technique"
                        android:textColor="#888888"
                        android:textSize="12sp"
                        android:layout_marginTop="2dp" />

                </LinearLayout>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_arrow_right"
                    app:tint="#CCCCCC"
                    android:contentDescription="Open" />

            </LinearLayout>

            <!-- Comparison & Analysis Card -->
            <LinearLayout
                android:id="@+id/cardComparison"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/card_rounded"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="14dp"
                android:layout_marginBottom="24dp"
                android:elevation="2dp">

                <FrameLayout
                    android:layout_width="48dp"
                    android:layout_height="48dp">

                    <View
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="@drawable/icon_circle_blue" />

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_chart"
                        app:tint="#1E88E5"
                        android:contentDescription="Comparison" />

                </FrameLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="14dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Comparison &amp; Analysis"
                        android:textColor="#1A1A1A"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Side-by-side comparison tools"
                        android:textColor="#888888"
                        android:textSize="12sp"
                        android:layout_marginTop="2dp" />

                </LinearLayout>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_arrow_right"
                    app:tint="#CCCCCC"
                    android:contentDescription="Open" />

            </LinearLayout>

            <!-- ========== SECTION 4: Advanced Analysis ========== -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ§   Advanced Analysis"
                android:textColor="#1A1A1A"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="12dp" />

            <!-- AI Analysis System Card (Gradient) -->
            <LinearLayout
                android:id="@+id/cardAIAnalysis"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/card_ai_gradient"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="16dp"
                android:layout_marginBottom="16dp"
                android:elevation="4dp">

                <FrameLayout
                    android:layout_width="48dp"
                    android:layout_height="48dp">

                    <View
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="@drawable/icon_circle_purple" />

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_brain"
                        app:tint="#7C4DFF"
                        android:contentDescription="AI" />

                </FrameLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="14dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="AI Analysis System"
                        android:textColor="@android:color/white"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Upload datasets â€¢ Extract features â€¢ Get recommendations"
                        android:textColor="#FFFFFFCC"
                        android:textSize="12sp"
                        android:layout_marginTop="2dp" />

                </LinearLayout>

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_arrow_right"
                    app:tint="@android:color/white"
                    android:contentDescription="Open" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
