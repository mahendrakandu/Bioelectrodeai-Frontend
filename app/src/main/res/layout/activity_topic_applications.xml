<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5">

    <!-- Header with Gradient -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gradient_header"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Back Button -->
        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_arrow_back"
            app:tint="@android:color/white"
            android:contentDescription="Back" />

        <!-- Title Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="16dp">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_medical_teal"
                android:background="@drawable/icon_bg_circle_blue"
                android:padding="10dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Clinical Applications"
                    android:textColor="@android:color/white"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvTopicSubtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Clinical Uses of Bipolar Recording"
                    android:textColor="#B3E5FC"
                    android:textSize="14sp"
                    android:layout_marginTop="2dp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Application 1: Electroencephalography (EEG) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/card_rounded"
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_marginBottom="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_application_teal" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Electroencephalography (EEG)"
                        android:textColor="#1A237E"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginStart="12dp" />

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Recording 'brain wave' activity from the scalp for diagnosing epilepsy, sleep disorders, and brain function assessment."
                    android:textColor="#666666"
                    android:textSize="14sp"
                    android:lineSpacingExtra="3dp"
                    android:layout_marginTop="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Why monopolar? Broad spatial coverage captures overall brain activity."
                    android:textColor="#1E88E5"
                    android:textSize="13sp"
                    android:textStyle="italic"
                    android:layout_marginTop="6dp" />

            </LinearLayout>

            <!-- Application 2: Electrocardiography (ECG) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/card_rounded"
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_marginBottom="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_application_teal" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Electrocardiography (ECG)"
                        android:textColor="#1A237E"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginStart="12dp" />

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Standard 12-lead ECG for cardiac rhythm analysis, myocardial infarction detection, and heart health monitoring."
                    android:textColor="#666666"
                    android:textSize="14sp"
                    android:lineSpacingExtra="3dp"
                    android:layout_marginTop="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Why monopolar? Simple setup for routine cardiac screening."
                    android:textColor="#1E88E5"
                    android:textSize="13sp"
                    android:textStyle="italic"
                    android:layout_marginTop="6dp" />

            </LinearLayout>

            <!-- Application 3: Surface EMG -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/card_rounded"
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_marginBottom="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_application_teal" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Surface EMG"
                        android:textColor="#1A237E"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginStart="12dp" />

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Non-invasive muscle activity monitoring for rehabilitation, biomechanics research, and sports science applications."
                    android:textColor="#666666"
                    android:textSize="14sp"
                    android:lineSpacingExtra="3dp"
                    android:layout_marginTop="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Why monopolar? Easier electrode vs biopotentials versus."
                    android:textColor="#1E88E5"
                    android:textSize="13sp"
                    android:textStyle="italic"
                    android:layout_marginTop="6dp" />

            </LinearLayout>

            <!-- Application 4: Evoked Potentials -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/card_rounded"
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_marginBottom="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_application_teal" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Evoked Potentials"
                        android:textColor="#1A237E"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginStart="12dp" />

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Visual, auditory, and somatosensory evoked potentials for assessing neural pathway integrity."
                    android:textColor="#666666"
                    android:textSize="14sp"
                    android:lineSpacingExtra="3dp"
                    android:layout_marginTop="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Why monopolar? Captures responses from distributed neural networks."
                    android:textColor="#1E88E5"
                    android:textSize="13sp"
                    android:textStyle="italic"
                    android:layout_marginTop="6dp" />

            </LinearLayout>

            <!-- Application 5: Holter Monitoring -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/card_rounded"
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_marginBottom="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_application_teal" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Holter Monitoring"
                        android:textColor="#1A237E"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginStart="12dp" />

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Continuous 24-48 hour ambulatory cardiac monitoring for detecting intermittent arrhythmias."
                    android:textColor="#666666"
                    android:textSize="14sp"
                    android:lineSpacingExtra="3dp"
                    android:layout_marginTop="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Why monopolar? Simple commands for extended wear comfort."
                    android:textColor="#1E88E5"
                    android:textSize="13sp"
                    android:textStyle="italic"
                    android:layout_marginTop="6dp" />

            </LinearLayout>

            <!-- Key Advantage Card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/ai_recommendation_bg"
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Key Advantage"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Monopolar recording is ideal for routine clinical screening, broad spatial surveys, and applications requiring simple, repetitive data acquisition."
                    android:textColor="@android:color/white"
                    android:alpha="0.95"
                    android:textSize="14sp"
                    android:lineSpacingExtra="3dp"
                    android:layout_marginTop="8dp" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/ai_recommendation_bg"
                android:orientation="horizontal"
                android:padding="16dp"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_search_yellow"
                    android:padding="4dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="14dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="AI Recommendation"
                        android:textColor="@android:color/white"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bipolar recording is the preferred choice for applications requiring high spatial resolution and noise immunity. Choose based on the specific clinical requirements of your application."
                        android:textColor="@android:color/white"
                        android:alpha="0.9"
                        android:textSize="14sp"
                        android:lineSpacingExtra="3dp"
                        android:layout_marginTop="6dp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <!-- Bottom Buttons Container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Continue to Monopolar Button -->
        <LinearLayout
            android:id="@+id/btnContinueMonopolar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_rounded_blue"
            android:gravity="center"
            android:padding="16dp"
            android:layout_marginBottom="12dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvContinueMonopolarText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Continue to Monopolar"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="8dp"
                android:src="@drawable/ic_arrow_forward"
                app:tint="@android:color/white" />

        </LinearLayout>

        <!-- Back to Topics Button -->
        <LinearLayout
            android:id="@+id/btnContinue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_outline_blue"
            android:gravity="center"
            android:padding="16dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvContinueText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Back to Topics"
                android:textColor="#1E88E5"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
