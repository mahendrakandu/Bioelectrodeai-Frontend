<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Background -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#E0F7FA" />
        </shape>
    </item>
    
    <!-- Top Header Bar -->
    <item android:top="0dp" android:bottom="280dp">
        <shape android:shape="rectangle">
            <solid android:color="#00897B" />
        </shape>
    </item>
    
    <!-- Electrode Symbol - Active Electrode Circle -->
    <item 
        android:left="140dp"
        android:right="140dp"
        android:top="80dp"
        android:bottom="200dp">
        <shape android:shape="oval">
            <solid android:color="#FFFFFF" />
            <stroke android:width="3dp" android:color="#00695C" />
        </shape>
    </item>
    
    <!-- Ground Symbol - Bottom -->
    <item
        android:left="120dp"
        android:right="120dp"
        android:top="260dp"
        android:bottom="60dp">
        <shape android:shape="rectangle">
            <solid android:color="#FF9800" />
            <corners android:radius="8dp" />
        </shape>
    </item>
    
    <!-- Connecting Line Vertical -->
    <item
        android:left="155dp"
        android:right="155dp"
        android:top="150dp"
        android:bottom="100dp">
        <shape android:shape="rectangle">
            <solid android:color="#00695C" />
        </shape>
    </item>
    
    <!-- Text placeholder area -->
    <item
        android:left="20dp"
        android:right="20dp"
        android:top="300dp"
        android:bottom="20dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" />
            <corners android:radius="12dp" />
        </shape>
    </item>

</layer-list>
